# =============================================================================
# ENVIRONMENT CONFIGURATION - LOCAL DEVELOPMENT EXAMPLE
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# NEVER commit .env.local to version control!

# =============================================================================
# üè† SUPABASE DATABASE
# =============================================================================
# Project URL and Keys from your Supabase Dashboard
NEXT_PUBLIC_SUPABASE_URL=your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# Database Connection (if needed)
DATABASE_URL=postgresql://postgres:your_password@db.your-project.supabase.co:5432/postgres

# =============================================================================
# üîê AUTHENTICATION & SECURITY
# =============================================================================
# NextAuth.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-at-least-32-characters

# Google OAuth (if using Google Sign-In)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# =============================================================================
# ü§ñ EXTERNAL SERVICES
# =============================================================================

# Apify Platform (Web Scraping)
APIFY_API_TOKEN=apify_api_YOUR_TOKEN_HERE

# Apify Actor IDs (Official Actor Names)
APIFY_ACTOR_URL_SCRAPER=tri_angle/airbnb-rooms-urls-scraper
APIFY_ACTOR_REVIEW_SCRAPER=tri_angle/airbnb-reviews-scraper
APIFY_ACTOR_LOCATION_SCRAPER=tri_angle/airbnb-scraper
APIFY_ACTOR_AVAILABILITY_SCRAPER=rigelbytes/airbnb-availability-calendar

# Google AI Platform (Gemini Pro Analysis)
GOOGLE_AI_API_KEY=your_google_ai_api_key_here
GEMINI_MODEL=gemini-pro

# =============================================================================
# üéØ APPLICATION SETTINGS
# =============================================================================
# Environment Mode
NODE_ENV=development
NEXT_PUBLIC_APP_ENV=development

# Logging & Debugging
LOG_LEVEL=info
ENABLE_API_LOGGING=true

# Rate Limiting (requests per minute)
RATE_LIMIT_APIFY=10
RATE_LIMIT_GEMINI=60

# =============================================================================
# üá©üá™ LOCALIZATION SETTINGS
# =============================================================================
NEXT_PUBLIC_DEFAULT_LOCALE=de
NEXT_PUBLIC_SUPPORTED_LOCALES=de,en

# Currency & Formatting
NEXT_PUBLIC_CURRENCY=EUR
NEXT_PUBLIC_NUMBER_FORMAT=de-DE